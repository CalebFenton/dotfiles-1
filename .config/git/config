# vim: ft=gitconfig:
[merge]
	tool = fugitive
[mergetool]
  keepBackup = false
[color]
  status = auto
  branch = auto
  diff = auto
  interactive = auto
[core]
  excludesfile = ~/.config/git/.globalignore
  editor = "nvim"
[apply]
  whitespace = nowarn
[help]
  autocorrect = 1
[alias]
  lg1 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%cr)%C(reset) %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  lg2 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%cD%C(reset) %C(bold green)(%cr)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(bold white)— %cn%C(reset)' --abbrev-commit
  lg = !"git lg1"
  ac = commit --amend
  pa = add --patch
  co = checkout
  st = status
  pr = pull --rebase
  up = !git fetch origin && git rebase origin/master
  m = merge
  b = branch
  a = add
  p = push
  c = commit
  v = commit -v
  ctags = !.git/hooks/ctags
  trust = "!mkdir -p .git/safe"
  work = !"git config user.email 'rich@stinkyink.com'"
  pushall = !git remote | xargs -L1 git push --all
[push]
  default = current
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[include]
  path = .gitconfig.local
[commit]
  template = ~/.config/git/message
[github]
	user = RichGuk
[user]
	name = Rich Grundy
	email = rich@grundy.io
[credential]
	helper = cache --timeout=3600
[init]
	defaultBranch = main

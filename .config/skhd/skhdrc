# Caps - Hyper: ['ctrl', 'alt', 'cmd'] = MOD_LCTL | MOD_LALT | MOD_LGUI
# Tab - Ultra: ['shift', 'ctrl', 'alt'] = MOD_LSFT | MOD_LCTL | MOD_LALT
# Tab + cmd - Ultimate: ['shift', 'ctrl', 'alt', 'cmd'] = MOD_LSFT | MOD_LCTL | MOD_LGUI | MOD_LALT
#
# Super: ['shift', 'alt', 'cmd'] = MOD_LSFT | MOD_LALT | MOD_LGUI


# ==== Navigation ====
alt - h : yabai -m window --focus west # || (yabai -m display --focus west && yabai -m window --focus last)
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east # || (yabai -m display --focus east && yabai -m window --focus first)

# Move to window to down/up/left/right
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

alt - tab : yabai -m window --focus stack.next || yabai -m window --focus stack.first
shift + alt - tab : yabai -m window --focus stack.prev || yabai -m window --focus stack.last

# ==== Resize windows =====
alt - 4 : yabai -m window --ratio abs:0.66
alt - 5 : yabai -m window --ratio abs:0.5
alt - 6 : yabai -m window --ratio abs:0.33
alt - 0x18 : yabai -m space --balance # alt - =

alt - r : yabai -m space --rotate 90
alt - y : yabai -m space --mirror y-axis
alt - x : yabai -m space --mirror x-axis
alt - t: yabai -m window --toggle split
alt - m : yabai -m window --toggle zoom-fullscreen
shift + alt - m: yabai -m window --toggle zoom-parent

alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2
alt - s : yabai -m window --insert east;  skhd -k "cmd - n"
alt - v : yabai -m window --insert south; skhd -k "cmd - n"

# PiP and sticky windows.
shift + alt - s : yabai -m window --toggle sticky; yabai -m window --toggle topmost; yabai -m window --grid 4:4:1:1:2:2
shift + alt - p : yabai -m window --toggle sticky; yabai -m window --toggle topmost; yabai -m window --grid 5:5:4:0:1:1

#
# Change layout / move display
#
shift + alt - z : yabai -m space --layout bsp
shift + alt - x : yabai -m space --layout float
shift + alt - c : yabai -m space --layout stack

# Focusing the monitors / workspaces
ctrl + alt + cmd - w: index=$(yabai -m query --displays | jq '.[] | select(.uuid == "2D12CFBC-8C0E-433D-B208-2FDA452BA74A").index') && yabai -m display --focus $index 
ctrl + alt + cmd - q: index=$(yabai -m query --displays | jq '.[] | select(.uuid == "14FC0FF3-E4A5-498F-989D-9930C4D41436").index') && yabai -m display --focus $index 
ctrl + alt + cmd - e: index=$(yabai -m query --displays | jq '.[] | select(.uuid == "7E399DCF-0C66-4429-8D86-54FCDC387927").index') && yabai -m display --focus $index 
ctrl + alt + cmd - 1 : index=$(yabai -m query --spaces --display | jq '.[0].index') && yabai -m space --focus $index
ctrl + alt + cmd - 2 : index=$(yabai -m query --spaces --display | jq '.[1].index') && yabai -m space --focus $index
ctrl + alt + cmd - 3 : index=$(yabai -m query --spaces --display | jq '.[2].index') && yabai -m space --focus $index
ctrl + alt + cmd - 4 : index=$(yabai -m query --spaces --display | jq '.[3].index') && yabai -m space --focus $index
ctrl + alt + cmd - 5 : index=$(yabai -m query --spaces --display | jq '.[4].index') && yabai -m space --focus $index
ctrl + alt + cmd - 6 : index=$(yabai -m query --spaces --display | jq '.[5].index') && yabai -m space --focus $index

# # Direct workspace focus
shift + ctrl + alt - 1 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "2D12CFBC-8C0E-433D-B208-2FDA452BA74A").spaces[0]') && yabai -m space --focus $index
shift + ctrl + alt - 2 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "2D12CFBC-8C0E-433D-B208-2FDA452BA74A").spaces[1]') && yabai -m space --focus $index
shift + ctrl + alt - 3 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "2D12CFBC-8C0E-433D-B208-2FDA452BA74A").spaces[2]') && yabai -m space --focus $index
shift + ctrl + alt - 4 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "2D12CFBC-8C0E-433D-B208-2FDA452BA74A").spaces[3]') && yabai -m space --focus $index
shift + ctrl + alt - 5 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "2D12CFBC-8C0E-433D-B208-2FDA452BA74A").spaces[4]') && yabai -m space --focus $index
shift + ctrl + alt - 6 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "2D12CFBC-8C0E-433D-B208-2FDA452BA74A").spaces[5]') && yabai -m space --focus $index

shift + ctrl + alt + cmd - 1 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "14FC0FF3-E4A5-498F-989D-9930C4D41436").spaces[0]') && yabai -m space --focus $index
shift + ctrl + alt + cmd - 2 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "14FC0FF3-E4A5-498F-989D-9930C4D41436").spaces[1]') && yabai -m space --focus $index
shift + ctrl + alt + cmd - 3 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "14FC0FF3-E4A5-498F-989D-9930C4D41436").spaces[2]') && yabai -m space --focus $index
shift + ctrl + alt + cmd - 4 : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "14FC0FF3-E4A5-498F-989D-9930C4D41436").spaces[3]') && yabai -m space --focus $index

# Tab + 1-8
# Ultra to space X and follow
#
shift + ctrl + cmd - 1 : index=$(yabai -m query --spaces --display | jq '.[0].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + ctrl + cmd - 2 : index=$(yabai -m query --spaces --display | jq '.[1].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + ctrl + cmd - 3 : index=$(yabai -m query --spaces --display | jq '.[2].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + ctrl + cmd - 4 : index=$(yabai -m query --spaces --display | jq '.[3].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + ctrl + cmd - 5 : index=$(yabai -m query --spaces --display | jq '.[4].index') && yabai -m window --space $index && yabai -m space --focus $index
shift + ctrl + cmd - 6 : index=$(yabai -m query --spaces --display | jq '.[5].index') && yabai -m window --space $index && yabai -m space --focus $index
# Move windows between displays:
# Ultra + [q,w,e]
shift + ctrl + cmd - q : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "14FC0FF3-E4A5-498F-989D-9930C4D41436").index') && yabai -m window --display $index; yabai -m display --focus $index
shift + ctrl + cmd - w : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "2D12CFBC-8C0E-433D-B208-2FDA452BA74A").index') && yabai -m window --display $index; yabai -m display --focus $index
shift + ctrl + cmd - e : index=$(yabai -m query --displays | jq '.[] | select(.uuid == "7E399DCF-0C66-4429-8D86-54FCDC387927").index') && yabai -m window --display $index; yabai -m display --focus $index

#
# Shortcuts for opening apps
#
alt - down : open ~
alt - return : osascript ~/Scripts/launch-term.scpt
alt - up : osascript ~/Scripts/launch-firefox.scpt
